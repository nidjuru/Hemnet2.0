@model IEnumerable<HemnetMVC.Models.HouseObjectViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/IndexFinal.css">
    <title>Document</title>
</head>
<body>
    <div class="main">
        <div class="searchbar">            
            <form autocomplete="off" method="post" action="" style="outline:none">                
                @Html.TextBox("SearchString", "", new { placeholder = "Sök på address" }) <br />
            </form>
            <form autocomplete="off" method="post" action="" style="outline:none">
                @Html.TextBox("PriceRange", "", new { type = "number", min = "500000", step = "500000", placeholder = "Sök på pris" })
            </form>
        </div> 

        <ul class="cards">

            @foreach (var item in Model)
            {
                <li class="cards_item">
                    <a a asp-action="Details" asp-route-id="@item.HouseObjectId">
                        <div class="card">
                            <div class="card_image"> <img class="img-card" src="@Html.DisplayFor(modelItem => item.Images)"></div>
                            <div class="card_content">
                                <h2 class="card_title">@Html.DisplayFor(modelItem => item.Address)</h2>
                                <p class="card_text">@Html.DisplayFor(modelItem => item.Price) SEK</p>
                                <p class="card_text">Area: @Html.DisplayFor(modelItem => item.LivingArea) m²</p>
                                <p class="card_text">Rooms: @Html.DisplayFor(modelItem => item.Rooms)</p>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</body>
</html>
